{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "paths": {
    "@controllers/*": [
      "./src/controllers/*"
    ],
    "@routes/*": [
      "./src/routes/*"
    ],
    "@models/*": [
      "./src/models/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}